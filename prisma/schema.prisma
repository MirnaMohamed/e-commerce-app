generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id    Int     @id @default(autoincrement())
  name        String
  description String?
  price       Float
  image       String?
  slug        String  @unique
  category  Category @relation(fields: [categoryId], references: [id])
  categoryId Int
}

model Category {
  id    Int     @id @default(autoincrement())
  name String 
  slug String @unique
  products Product[]
}